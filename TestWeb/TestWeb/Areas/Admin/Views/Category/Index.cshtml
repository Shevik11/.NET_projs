@model List<Category>

	<div class="container">
		<div class="row pt-4 pb-3">
			<div class="clo-6">
				<h2 class="text-primary">
					Category List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bg bi-plus-circle">Create</i>
				</a>
			</div>
		</div>
	</div>


<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>DisplayedOrder</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u=>u.DisplayedOrder))
		{

			<tr>
				<td>
					@obj.Id
				</td>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayedOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn mx-2 btn-primary">
							<i class="bi bi-pencil-square"></i>Edit
					</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn mx-2 btn-danger">
							<i class="bi bi-trash-fill"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>